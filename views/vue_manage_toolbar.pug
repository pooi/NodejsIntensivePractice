v-toolbar(fixed, dark,  dense, color='deep-orange darken-3')
    //v-toolbar-side-icon
    v-toolbar-title(v-text='title', onclick="window.location.href='/'")
    v-spacer
    v-toolbar-items
        v-btn(flat, style='height: auto;', @click.native="loginData.dialog = true", v-if='loginData.user === null') Login
        v-btn(flat, style='height: auto;', @click.native="loginData.infoDialog = true", v-if='loginData.user !== null') {{ loginData.user.name }}ë‹˜


    v-tabs(centered, slot="extension", v-model='currentTab', show-arrows, color="deep-orange darken-3", slider-color='white', v-if='isShowTab', grow)
        v-tab(v-for='item in tabItems', :key='item', :href="'#tab-' + item")
            | {{ item }}


