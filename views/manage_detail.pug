extends vue_layout
block content

    include vue_toolbar

    div(style="margin-top: 48px;")
        v-app
            v-content.brown.lighten-5

                // ############ PC
                v-container.hidden-xs-only.pa-2

                    v-flex(md12='')
                        v-card.elevation-10.my-4.pt-3.pb-0

                            div.px-3
                                v-card-title.headline.pa-0 Detail Information

                                v-divider.my-3

                                v-layout(row, wrap, sm12)
                                    //v-flex(xs12, sm5)
                                    //    v-card.elevation-4.mb-3(width='100%')
                                    //        img(:src= "data.photos", width="100%")
                                    //
                                    //v-flex.pl-4(xs12, sm7)
                                    //    v-card-title.headline.pa-0 {{ data.id }}

                                    v-flex(sm2)
                                        v-subheader.right Image:
                                    v-flex.pl-4(sm9)
                                        v-card.elevation-4.mb-3(width='100%')
                                            img(:src= "data.photos", width="100%")

                                    v-flex(sm2)
                                        v-subheader.right ID:
                                    v-flex.pl-4(sm10)
                                        v-subheader.black--text {{data.id}}


                                    v-flex(sm2)
                                        v-subheader.right Category:
                                    v-flex.pl-4(sm10)
                                        v-subheader.black--text {{data.category}}


                                    v-flex(sm2)
                                        v-subheader.right 습득일:
                                    v-flex.pl-4(sm10)
                                        v-subheader.black--text {{msToDate(data.discovery_date)}}


                                    v-flex(sm2)
                                        v-subheader.right 등록일:
                                    v-flex.pl-4(sm10)
                                        v-subheader.black--text {{data.registered_date}}


                                    v-flex(sm2)
                                        v-subheader.right Brand:
                                    v-flex.pl-4(sm10)
                                        div(v-if="data.brand.split(';')[0] !== ''")
                                            v-chip.elevation-0(outline, v-for="brand in data.brand.split(';')", :key="brand", v-model='brand', color="orange darken-2")
                                                strong.title.mr-1 #
                                                strong {{ brand }}
                                        div(v-else)
                                            v-subheader There are no data.

                                    //v-layout.mt-2

                                    v-flex(sm2)
                                        v-subheader.right Tags:
                                    v-flex.pl-4(sm10)
                                        div(v-if="data.tags.split(';')[0] !== ''")
                                            v-chip.elevation-0(outline, v-for="tag in data.tags.split(';')", :key="tag", v-model='tag', color="orange darken-2")
                                                strong.title.mr-1 #
                                                strong {{ tag }}
                                        div(v-else)
                                            v-subheader There are no data.

                                    //v-layout.mt-2.mb-5

                                    v-flex(sm2)
                                        v-subheader.right Description:
                                    v-flex.pl-4(sm10)
                                        div(v-if="data.description.split(';')[0] !== ''")
                                            v-chip.elevation-0(outline, v-for="description in data.description.split(';')", :key="description", v-model='description', color="orange darken-2")
                                                strong.title.mr-1 #
                                                strong {{ description }}
                                        div(v-else)
                                            v-subheader There are no data.



                            v-layout.mt-5.grey.darken-1(xs12)
                                v-flex(xs6)
                                    v-btn.elevation-0.my-0(block, color='grey darken-1', dark, onclick="window.history.back();") Back
                                v-flex(xs6)
                                    v-btn.elevation-0.my-0(block, color='orange darken-1', dark, @click.native="sheet = true") Share


                // ############ Mobile
                v-container.hidden-sm-and-up.pa-0(fluid, style="padding-top: 50px;")

                    v-flex(md12='')
                        v-card.elevation-0

                            div.pa-3

                                v-card-title.headline.pa-0.pt-4 Detail Information

                                v-divider.my-3

                                //| {{ data }}

                                v-layout(row, wrap)
                                    v-flex.pb-4(xs12, sm5)
                                        v-card.elevation-4(width='100%')
                                            img(:src= "data.photos", width="100%")

                                    //v-flex(xs12, sm7)
                                    //    v-card-title.headline.pa-0 {{ data.id }}

                                    v-flex(xs3)
                                        v-subheader.right ID:
                                    v-flex.pl-4(xs9)
                                        v-subheader.black--text {{data.id}}


                                    v-flex(xs3)
                                        v-subheader.right Category:
                                    v-flex.pl-4(xs9)
                                        v-subheader.black--text {{data.category}}


                                    v-flex(xs3)
                                        v-subheader.right 습득일:
                                    v-flex.pl-4(xs9)
                                        v-subheader.black--text {{msToDate(data.discovery_date)}}


                                    v-flex(xs3)
                                        v-subheader.right 등록일:
                                    v-flex.pl-4(xs9)
                                        v-subheader.black--text {{data.registered_date}}


                                    v-flex(xs3)
                                        v-subheader.right Brand:
                                    v-flex.pl-4(xs9)
                                        div(v-if="data.brand.split(';')[0] !== ''")
                                            v-chip.elevation-0(outline, v-for="brand in data.brand.split(';')", :key="brand", v-model='brand', color="orange darken-2")
                                                strong.title.mr-1 #
                                                strong {{ brand }}
                                        div(v-else)
                                            v-subheader There are no data.

                                    v-layout.mt-2

                                        v-flex(xs3)
                                            v-subheader.right Tags:
                                        v-flex.pl-4(xs9)
                                            div(v-if="data.tags.split(';')[0] !== ''")
                                                v-chip.elevation-0(outline, v-for="tag in data.tags.split(';')", :key="tag", v-model='tag', color="orange darken-2")
                                                    strong.title.mr-1 #
                                                    strong {{ tag }}
                                            div(v-else)
                                                v-subheader There are no data.

                                    v-layout.mt-2

                                        v-flex(xs3)
                                            v-subheader.right Description:
                                        v-flex.pl-4(xs9)
                                            div(v-if="data.description.split(';')[0] !== ''")
                                                v-chip.elevation-0(outline, v-for="description in data.description.split(';')", :key="description", v-model='description', color="orange darken-2")
                                                    strong.title.mr-1 #
                                                    strong {{ description }}
                                            div(v-else)
                                                v-subheader There are no data.


                            v-layout.grey.darken-1.mb-4(xs12)
                                v-flex(xs6)
                                    v-btn.elevation-0.my-0(block, color='grey darken-1', dark, onclick="window.history.back();") Back
                                v-flex(xs6)
                                    v-btn.elevation-0.my-0(block, color='orange darken-1', dark, @click.native="sheet = true") Share



                v-bottom-sheet(v-model='sheet', inset, max-width='500px')
                    v-list
                        v-subheader Share to ...
                        v-list-tile(v-for='tile in shares', :key='tile', @click='shareTo(tile.title)')
                            v-list-tile-avatar
                                v-avatar(size='32px', tile='')
                                    img(:src="'/images/' + tile.img")
                            v-list-tile-title {{ tile.title }}

        include vue_footer
        include vue_menu_fab

    include vue_dialog

    script(type="text/javascript" src='/javascripts/manage-detail-config.js')
    script.
        const vue = init('!{data}');
